{
  "name": "tkesim",
  "version": "1.0.0",
  "description": "TUI Kafka Event Simulator - Generate and send Kafka events with synthetic data",
  "type": "module",
  "main": "src/index.tsx",
  "bin": {
    "tkesim": "./dist/index.js"
  },
  "scripts": {
    "start": "tsx src/index.tsx",
    "dev": "tsx --watch src/index.tsx",
    "build": "tsup",
    "test": "vitest run",
    "setup": "docker compose up -d && echo 'Kafka started. Now run: npm start'"
  },
  "postinstall": "npm run build 2>/dev/null || echo 'Build failed, but you can still run: npm start'"
  "dependencies": {
    "@faker-js/faker": "^8.4.0",
    "ink": "^5.0.1",
    "ink-select-input": "^6.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "kafkajs": "^2.2.4",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "@types/react": "^18.2.0",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "tui",
    "kafka",
    "simulator",
    "events",
    "synthetic-data",
    "ink"
  ],
  "license": "MIT"
}
